<Window x:Class="WassControlSys.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:WassControlSys.ViewModels"
        xmlns:core="clr-namespace:WassControlSys.Core"
        xmlns:views="clr-namespace:WassControlSys.Views"
        mc:Ignorable="d"
        Title="WassControlSys" Height="600" Width="1000">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32" ResizeBorderThickness="4" GlassFrameThickness="0" CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Border Background="{StaticResource WindowBackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Barra de tÃ­tulo personalizada -->
            <Border Grid.Row="0" Background="#1A1A1A" BorderBrush="#333" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- TÃ­tulo -->
                    <TextBlock Grid.Column="0" Text="WassControlSys" 
                               VerticalAlignment="Center" 
                               Margin="15,0,0,0" 
                               FontSize="13" 
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryBrush}"/>

                    <!-- Controles de ventana -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" WindowChrome.IsHitTestVisibleInChrome="True">
                        <!-- BotÃ³n Minimizar -->
                        <Button x:Name="MinimizeButton" 
                                Content="ðŸ—•" 
                                Width="46" 
                                Height="32" 
                                Background="Transparent" 
                                Foreground="White" 
                                BorderThickness="0" 
                                FontSize="16"
                                Cursor="Hand"
                                Click="MinimizeButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#2A2A2A"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- BotÃ³n Maximizar/Restaurar -->
                        <Button x:Name="MaximizeButton" 
                                Content="ðŸ—–" 
                                Width="46" 
                                Height="32" 
                                Background="Transparent" 
                                Foreground="White" 
                                BorderThickness="0" 
                                FontSize="16"
                                Cursor="Hand"
                                Click="MaximizeButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#2A2A2A"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- BotÃ³n Cerrar -->
                        <Button x:Name="CloseButton" 
                                Content="âœ•" 
                                Width="46" 
                                Height="32" 
                                Background="Transparent" 
                                Foreground="White" 
                                BorderThickness="0" 
                                FontSize="16"
                                Cursor="Hand"
                                Click="CloseButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E81123"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Barra lateral -->
            <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}" BorderBrush="#333" BorderThickness="0,0,1,0">
                <StackPanel Margin="20">
                    <!-- Logo / TÃ­tulo -->
                    <TextBlock Text="WassControl" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource PrimaryBrush}" Margin="0,0,0,30"/>

                    <!-- NavegaciÃ³n -->
                    <StackPanel>
                        <Button Content="Dashboard" Command="{Binding NavigateCommand}" CommandParameter="Dashboard" Style="{StaticResource NavButtonStyle}" Foreground="White" Background="#2A2A2A"/>
                        <Button Content="Limpieza" Command="{Binding NavigateCommand}" CommandParameter="Limpieza" Style="{StaticResource NavButtonStyle}"/>
                        <Button Content="OptimizaciÃ³n" Command="{Binding NavigateCommand}" CommandParameter="Optimizacion" Style="{StaticResource NavButtonStyle}"/>
                        <Button Content="DiagnÃ³stico" Command="{Binding NavigateCommand}" CommandParameter="Diagnostico" Style="{StaticResource NavButtonStyle}"/>
                        <Button Content="Sistema" Command="{Binding NavigateCommand}" CommandParameter="Sistema" Style="{StaticResource NavButtonStyle}"/>
                        <Button Content="Seguridad" Command="{Binding NavigateCommand}" CommandParameter="Seguridad" Style="{StaticResource NavButtonStyle}"/>
                        <Button Content="Inicio" Command="{Binding NavigateCommand}" CommandParameter="Inicio" Style="{StaticResource NavButtonStyle}"/>
                        <Button Content="Servicios" Command="{Binding NavigateCommand}" CommandParameter="Servicios" Style="{StaticResource NavButtonStyle}"/>
                        <Button Content="Desinstalador" Command="{Binding NavigateCommand}" CommandParameter="Desinstalador" Style="{StaticResource NavButtonStyle}"/>
                        <Button Content="Procesos" Command="{Binding NavigateCommand}" CommandParameter="Procesos" Style="{StaticResource NavButtonStyle}"/>
                        <Button Content="TÃ©rmico" Command="{Binding NavigateCommand}" CommandParameter="Termico" Style="{StaticResource NavButtonStyle}"/>
                        <Button Content="Discos" Command="{Binding NavigateCommand}" CommandParameter="Discos" Style="{StaticResource NavButtonStyle}"/>
                    </StackPanel>
                    
                    <StackPanel VerticalAlignment="Bottom" Margin="0,50,0,0">
                         <Button Content="ConfiguraciÃ³n" Command="{Binding NavigateCommand}" CommandParameter="Configuracion" Style="{StaticResource NavButtonStyle}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Ãrea de contenido principal -->
            <Grid Grid.Column="1" Margin="30">
                
                <!-- VISTA: DASHBOARD -->
                <views:DashboardView Visibility="{Binding CurrentSection, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Dashboard}"/>

                <!-- VISTA: LIMPIEZA -->
                <views:CleaningView Visibility="{Binding CurrentSection, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Limpieza}"/>

                <!-- VISTA: OPTIMIZACIÃ“N -->
                <views:OptimizationView Visibility="{Binding CurrentSection, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Optimizacion}"/>

                <!-- VISTA: DIAGNÃ“STICO -->
                <views:DiagnosticView Visibility="{Binding CurrentSection, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Diagnostico}"/>

                <!-- VISTA: SISTEMA -->
                <views:SystemInfoView Visibility="{Binding CurrentSection, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Sistema}"/>

                <!-- VISTA: SEGURIDAD -->
                <views:SecurityView Visibility="{Binding CurrentSection, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Seguridad}"/>
                 
                <!-- VISTA: CONFIGURACIÃ“N -->
                <views:SettingsView Visibility="{Binding CurrentSection, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Configuracion}"/>

                <!-- VISTA: INICIO -->
                <views:StartupManagerView Visibility="{Binding CurrentSection, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Inicio}"/>

                <!-- VISTA: SERVICIOS -->
                <views:ServiceOptimizerView Visibility="{Binding CurrentSection, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Servicios}"/>

                <!-- VISTA: DESINSTALADOR -->
                <views:BloatwareView Visibility="{Binding CurrentSection, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Desinstalador}"/>
                
                <!-- VISTA: PROCESOS -->
                <views:ProcessManagerView Visibility="{Binding CurrentSection, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Procesos}"/>
                <views:ThermalMonitorView Visibility="{Binding CurrentSection, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Termico}"/>
                <views:DiskHealthView Visibility="{Binding CurrentSection, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Discos}"/>

            </Grid>
            </Grid>

            <!-- Busy Overlay -->
            <Grid Grid.Row="1" Background="#88000000" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="280" Height="14" />
                    <TextBlock Text="{Binding StatusMessage}" Foreground="White" FontSize="14" Margin="0,10,0,0" TextAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
